<Window x:Class="Wpf2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="420" MinHeight="420" MinWidth="240">


    <Grid Margin="0,0,0,-21" Height="800">
        <Menu Margin="0,0,0,779" DockPanel.Dock="Top">
            <MenuItem Header="File" >
                <MenuItem Header="Connect"/>
                <MenuItem Header="Disconnect"/>
                <MenuItem Header="Exit" Click="MenuItem_Click_1"/>
            </MenuItem>
            <MenuItem Header="Help" >
                <MenuItem Header="About" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="8,732,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="20"  DockPanel.Dock="Bottom" KeyDown="Enter"/>
        <Button   HorizontalAlignment="Left" Margin="313,732,0,0" VerticalAlignment="Top" Width="85" DockPanel.Dock="Bottom" Height="21" Click="Button_Click" Content="Send" >
            
        </Button>
        <ScrollViewer Margin="0,21,0,73" VerticalScrollBarVisibility="Auto">

            <StackPanel x:Name ="Panel">

            </StackPanel>




        </ScrollViewer>

    </Grid>
</Window>
