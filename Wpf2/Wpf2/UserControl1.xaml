<UserControl x:Class="Wpf2.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf2"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="300">
    <Border x:Name="bubbleBorder" CornerRadius="12" Background="DarkOrange" Margin="5" Padding="10">
        <StackPanel>
            <TextBlock x:Name="usernameText" Text="{Binding Username}" 
                       FontWeight="Bold" Foreground="White"/>
            <TextBlock x:Name="messageContent" Text="{Binding Message}" 
                       TextWrapping="Wrap" Foreground="White" />
            <TextBlock x:Name="date" Text="{Binding Date}" FontSize="10" 
                       Foreground="Black" Width="45"
                      ToolTip="{Binding ExactTimestamp}" Height="12" RenderTransformOrigin="3.312,0.941">
                <!--TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform-->
            </TextBlock>
        </StackPanel>
    </Border>
